{
	"name": "vscode-crowdin",
	"displayName": "Crowdin",
	"description": "Crowdin Explorer for Visual Studio Code",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.34.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:tmsFiles"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": [
			{
				"title": "Crowdin Explorer",
				"properties": {
					"tms.autoRefresh": {
						"type": "boolean",
						"default": "true",
						"description": "Enables or disables auto refresh after each change in Crowdin configuration file.",
						"scope": "window"
					}
				}
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "crowdin-explorer",
					"title": "Crowdin Explorer",
					"icon": "resources/icon.svg"
				}
			]
		},
		"views": {
			"crowdin-explorer": [
				{
					"id": "tmsFiles",
					"name": "TMS Files"
				}
			]
		},
		"commands": [
			{
				"command": "tmsFiles.refresh",
				"title": "Refresh folders",
				"icon": {
					"light": "resources/light/update.svg",
					"dark": "resources/dark/update.svg"
				}
			},
			{
				"command": "tmsFiles.downloadAll",
				"title": "Download translations",
				"icon": {
					"light": "resources/light/download.svg",
					"dark": "resources/dark/download.svg"
				}
			},
			{
				"command": "tmsFiles.download",
				"title": "Download translations",
				"icon": {
					"light": "resources/light/download.svg",
					"dark": "resources/dark/download.svg"
				}
			},
			{
				"command": "tmsFiles.saveAll",
				"title": "Upload translations",
				"icon": {
					"light": "resources/light/save.svg",
					"dark": "resources/dark/save.svg"
				}
			},
			{
				"command": "tmsFiles.save",
				"title": "Upload translations",
				"icon": {
					"light": "resources/light/save.svg",
					"dark": "resources/dark/save.svg"
				}
			},
			{
				"command": "tmsFiles.edit",
				"title": "Edit configuration",
				"icon": {
					"light": "resources/light/edit.svg",
					"dark": "resources/dark/edit.svg"
				}
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "tmsFiles.refresh",
					"when": "view == tmsFiles",
					"group": "navigation@0"
				},
				{
					"command": "tmsFiles.saveAll",
					"when": "view == tmsFiles",
					"group": "navigation@1"
				},
				{
					"command": "tmsFiles.downloadAll",
					"when": "view == tmsFiles",
					"group": "navigation@2"
				}
			],
			"view/item/context": [
				{
					"command": "tmsFiles.edit",
					"when": "view == tmsFiles && viewItem == tmsRoot",
					"group": "inline@0"
				},
				{
					"command": "tmsFiles.save",
					"when": "view == tmsFiles",
					"group": "inline@1"
				},
				{
					"command": "tmsFiles.download",
					"when": "view == tmsFiles && viewItem == tmsRoot",
					"group": "inline@2"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"icon": "icon.png",
	"repository": "github:crowdin/vscode-crowdin",
	"devDependencies": {
		"@types/adm-zip": "^0.4.32",
		"@types/form-data": "^2.2.1",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^2.2.42",
		"@types/nock": "^10.0.3",
		"@types/node": "^10.12.21",
		"@types/yaml": "^1.0.2",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode": "^1.1.28"
	},
	"dependencies": {
		"adm-zip": "^0.4.13",
		"axios": "^0.19.0",
		"form-data": "^2.3.3",
		"glob": "^7.1.4",
		"nock": "^10.0.6",
		"yaml": "^1.6.0"
	}
}
{
	"name": "vscode-crowdin",
	"displayName": "vscode-crowdin",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.34.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:tmsFiles"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": [
			{
				"title": "Crowdin Explorer",
				"properties": {
					"tms.autoRefresh": {
						"type": "boolean",
						"default": "true",
						"description": "Enables or disables auto refresh after each change in Crowdin configuration file.",
						"scope": "window"
					}
				}
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "crowdin-explorer",
					"title": "Crowdin Explorer",
					"icon": "resources/icon.svg"
				}
			]
		},
		"views": {
			"crowdin-explorer": [
				{
					"id": "tmsFiles",
					"name": "TMS Files"
				}
			]
		},
		"commands": [
			{
				"command": "tmsFiles.refresh",
				"title": "Refresh folders",
				"icon": {
					"light": "resources/light/update.svg",
					"dark": "resources/dark/update.svg"
				}
			},
			{
				"command": "tmsFiles.download",
				"title": "Download files"
			},
			{
				"command": "tmsFiles.saveAll",
				"title": "Upload All",
				"icon": {
					"light": "resources/light/save.svg",
					"dark": "resources/dark/save.svg"
				}
			},
			{
				"command": "tmsFiles.save",
				"title": "Upload",
				"icon": {
					"light": "resources/light/save.svg",
					"dark": "resources/dark/save.svg"
				}
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "tmsFiles.refresh",
					"when": "view == tmsFiles",
					"group": "navigation"
				},
				{
					"command": "tmsFiles.download",
					"when": "view == tmsFiles"
				},
				{
					"command": "tmsFiles.saveAll",
					"when": "view == tmsFiles",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "tmsFiles.save",
					"when": "view == tmsFiles && viewItem == tmsItem",
					"group": "inline"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/adm-zip": "^0.4.32",
		"@types/form-data": "^2.2.1",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^2.2.42",
		"@types/nock": "^10.0.3",
		"@types/node": "^10.12.21",
		"@types/yaml": "^1.0.2",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode": "^1.1.28"
	},
	"dependencies": {
		"adm-zip": "^0.4.13",
		"axios": "^0.19.0",
		"form-data": "^2.3.3",
		"glob": "^7.1.4",
		"nock": "^10.0.6",
		"yaml": "^1.6.0"
	}
}

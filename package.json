{
	"name": "vscode-crowdin",
	"displayName": "vscode-crowdin",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.34.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:tmsFiles"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "crowdin-explorer",
					"title": "Crowdin Explorer",
					"icon": "resources/icon.svg"
				}
			]
		},
		"views": {
			"crowdin-explorer": [
				{
					"id": "tmsFiles",
					"name": "TMS Files"
				}
			]
		},
		"commands": [
			{
				"command": "tmsFiles.refreshEntry",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "tmsFiles.addEntry",
				"title": "Add"
			},
			{
				"command": "tmsFiles.editEntry",
				"title": "Edit",
				"icon": {
					"light": "resources/light/edit.svg",
					"dark": "resources/dark/edit.svg"
				}
			},
			{
				"command": "tmsFiles.deleteEntry",
				"title": "Delete"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "tmsFiles.refreshEntry",
					"when": "view == tmsFiles",
					"group": "navigation"
				},
				{
					"command": "tmsFiles.addEntry",
					"when": "view == tmsFiles"
				}
			],
			"view/item/context": [
				{
					"command": "tmsFiles.editEntry",
					"when": "view == tmsFiles && viewItem == tmsItem",
					"group": "inline"
				},
				{
					"command": "tmsFiles.deleteEntry",
					"when": "view == tmsFiles && viewItem == tmsItem"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}
}

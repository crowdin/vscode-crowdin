{
	"name": "vscode-crowdin",
	"displayName": "Crowdin",
	"description": "Crowdin Explorer for Visual Studio Code",
	"publisher": "Crowdin",
	"version": "1.0.0",
	"license": "MIT",
	"engines": {
		"vscode": "^1.35.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"Crowdin",
		"Localization",
		"Internationalization",
		"i18n",
		"Translation",
		"Translate",
		"Multi-language"
	],
	"activationEvents": [
		"onView:tmsFiles"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"configuration": [
			{
				"title": "Crowdin Explorer",
				"properties": {
					"tms.autoRefresh": {
						"type": "boolean",
						"default": "true",
						"description": "Enables or disables auto refresh after each change in Crowdin configuration file.",
						"scope": "window"
					}
				}
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "crowdin-explorer",
					"title": "Crowdin Explorer",
					"icon": "resources/icon.svg"
				}
			]
		},
		"views": {
			"crowdin-explorer": [
				{
					"id": "tmsFiles",
					"name": "TMS Files"
				}
			]
		},
		"commands": [
			{
				"command": "tmsFiles.refresh",
				"title": "Refresh folders",
				"icon": {
					"light": "resources/light/update.svg",
					"dark": "resources/dark/update.svg"
				}
			},
			{
				"command": "tmsFiles.downloadAll",
				"title": "Download translations",
				"icon": {
					"light": "resources/light/download.svg",
					"dark": "resources/dark/download.svg"
				}
			},
			{
				"command": "tmsFiles.download",
				"title": "Download translations",
				"icon": {
					"light": "resources/light/download.svg",
					"dark": "resources/dark/download.svg"
				}
			},
			{
				"command": "tmsFiles.saveAll",
				"title": "Upload source files",
				"icon": {
					"light": "resources/light/save.svg",
					"dark": "resources/dark/save.svg"
				}
			},
			{
				"command": "tmsFiles.save",
				"title": "Upload source files",
				"icon": {
					"light": "resources/light/save.svg",
					"dark": "resources/dark/save.svg"
				}
			},
			{
				"command": "tmsFiles.edit",
				"title": "Edit configuration",
				"icon": {
					"light": "resources/light/edit.svg",
					"dark": "resources/dark/edit.svg"
				}
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "tmsFiles.refresh",
					"when": "view == tmsFiles",
					"group": "navigation@0"
				},
				{
					"command": "tmsFiles.saveAll",
					"when": "view == tmsFiles",
					"group": "navigation@1"
				},
				{
					"command": "tmsFiles.downloadAll",
					"when": "view == tmsFiles",
					"group": "navigation@2"
				}
			],
			"view/item/context": [
				{
					"command": "tmsFiles.edit",
					"when": "view == tmsFiles && viewItem == tmsRoot",
					"group": "inline@0"
				},
				{
					"command": "tmsFiles.save",
					"when": "view == tmsFiles",
					"group": "inline@1"
				},
				{
					"command": "tmsFiles.download",
					"when": "view == tmsFiles && viewItem == tmsRoot",
					"group": "inline@2"
				}
			]
		}
	},
	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install",
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"test-compile": "tsc -p ./"
	},
	"icon": "icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/crowdin/vscode-crowdin.git"
	},
	"devDependencies": {
		"@types/adm-zip": "^0.4.32",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.14.10",
		"@types/yaml": "^1.0.2",
		"ts-loader": "^6.0.1",
		"tslint": "^5.12.1",
		"typescript": "^3.5.2",
		"vscode": "^1.1.35",
		"webpack": "^4.38.0",
		"webpack-cli": "^3.3.6"
	},
	"dependencies": {
		"@crowdin/crowdin-api-client": "1.6.0",
		"adm-zip": "^0.4.14",
		"axios": "^0.19.2",
		"glob": "^7.1.4",
		"original-fs": "^1.1.0",
		"yaml": "^1.6.0"
	}
}

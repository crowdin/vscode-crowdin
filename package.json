{
	"name": "vscode-crowdin",
	"displayName": "Crowdin",
	"description": "Crowdin Explorer for Visual Studio Code",
	"publisher": "Crowdin",
	"version": "1.5.0",
	"license": "MIT",
	"engines": {
		"vscode": "^1.35.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"Crowdin",
		"Localization",
		"Internationalization",
		"i18n",
		"Translation",
		"Translate",
		"Multi-language"
	],
	"activationEvents": [
		"*"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"configuration": [
			{
				"title": "Crowdin Explorer",
				"properties": {
					"tms.autoRefresh": {
						"type": "boolean",
						"default": "true",
						"description": "Enables or disables auto refresh after each change in Crowdin configuration file.",
						"scope": "window"
					},
					"tms.stringsCompletion": {
						"type": "boolean",
						"default": "true",
						"description": "Enables or disables auto completion of strings keys.",
						"scope": "window"
					},
					"tms.stringsCompletionFileExtensions": {
						"type": "string",
						"default": "*",
						"description": "Comma-separated list of file extensions for which autocomplete should be active. By default strings autocomplete will be active in all files.",
						"scope": "window"
					},
					"tms.useGitBranch": {
						"type": "boolean",
						"default": "false",
						"description": "Use a Git branch as a Crowdin branch",
						"scope": "window"
					}
				}
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "crowdin-explorer",
					"title": "Crowdin Explorer",
					"icon": "resources/icon.svg"
				}
			]
		},
		"views": {
			"crowdin-explorer": [
				{
					"id": "tmsFiles",
					"name": "TMS Files"
				},
				{
					"id": "translationProgress",
					"name": "Progress"
				}
			]
		},
		"commands": [
			{
				"command": "tmsFiles.refresh",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "tmsFiles.downloadAll",
				"title": "Download translations",
				"icon": {
					"light": "resources/light/download.svg",
					"dark": "resources/dark/download.svg"
				}
			},
			{
				"command": "tmsFiles.download",
				"title": "Download translations",
				"icon": {
					"light": "resources/light/download.svg",
					"dark": "resources/dark/download.svg"
				}
			},
			{
				"command": "tmsFiles.saveAll",
				"title": "Upload source files",
				"icon": {
					"light": "resources/light/upload.svg",
					"dark": "resources/dark/upload.svg"
				}
			},
			{
				"command": "tmsFiles.save",
				"title": "Upload source files",
				"icon": {
					"light": "resources/light/upload.svg",
					"dark": "resources/dark/upload.svg"
				}
			},
			{
				"command": "tmsFiles.edit",
				"title": "Edit configuration",
				"icon": {
					"light": "resources/light/settings.svg",
					"dark": "resources/dark/settings.svg"
				}
			},
			{
				"command": "translationProgress.refresh",
				"title": "Refresh progress",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "tmsFiles.updateSourceFolder",
				"title": "Download source files",
				"icon": {
					"light": "resources/light/download_source.svg",
					"dark": "resources/dark/download_source.svg"
				}
			},
			{
				"command": "tmsFiles.updateSourceFile",
				"title": "Download source file",
				"icon": {
					"light": "resources/light/download_source.svg",
					"dark": "resources/dark/download_source.svg"
				}
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "tmsFiles.refresh",
					"when": "view == tmsFiles",
					"group": "navigation@0"
				},
				{
					"command": "tmsFiles.saveAll",
					"when": "view == tmsFiles",
					"group": "navigation@1"
				},
				{
					"command": "tmsFiles.downloadAll",
					"when": "view == tmsFiles",
					"group": "navigation@2"
				},
				{
					"command": "tmsFiles.updateSourceFolder",
					"when": "view == tmsFiles",
					"group": "navigation@3"
				},
				{
					"command": "translationProgress.refresh",
					"when": "view == translationProgress",
					"group": "navigation@0"
				}
			],
			"view/item/context": [
				{
					"command": "tmsFiles.edit",
					"when": "view == tmsFiles && viewItem == tmsRoot",
					"group": "inline@0"
				},
				{
					"command": "tmsFiles.save",
					"when": "view == tmsFiles",
					"group": "inline@1"
				},
				{
					"command": "tmsFiles.download",
					"when": "view == tmsFiles && viewItem == tmsRoot",
					"group": "inline@2"
				},
				{
					"command": "tmsFiles.updateSourceFolder",
					"when": "view == tmsFiles && viewItem == tmsRoot",
					"group": "inline@3"
				},
				{
					"command": "tmsFiles.updateSourceFile",
					"when": "view == tmsFiles && viewItem == tmsFile",
					"group": "inline@4"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"test-compile": "tsc -p ./",
		"lint": "eslint './src/**/*.{ts,js}'",
		"prettier": "prettier --write './src/**/*.{ts,js}'",
		"prettier:check": "prettier --check './src/**/*.{ts,js}'"
	},
	"icon": "icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/crowdin/vscode-crowdin.git"
	},
	"devDependencies": {
		"@types/adm-zip": "^0.5.0",
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.1",
		"@types/node": "^18.17.1",
		"@types/vscode": "1.35.0",
		"@types/yaml": "^1.9.6",
		"@typescript-eslint/eslint-plugin": "^5.59.1",
		"@typescript-eslint/parser": "^5.62.0",
		"mocha": "^10.2.0",
		"prettier": "2.8.8",
		"ts-loader": "9.4.3",
		"typescript": "^5.1.6",
		"@vscode/test-electron": "2.3.3",
		"webpack": "5.88.2",
		"webpack-cli": "5.1.4"
	},
	"dependencies": {
		"@crowdin/crowdin-api-client": "1.24.0",
		"adm-zip": "^0.5.10",
		"glob": "^7.1.4",
		"original-fs": "^1.2.0",
		"yaml": "^2.3.1"
	}
}

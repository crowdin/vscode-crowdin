{
	"name": "vscode-crowdin",
	"displayName": "Crowdin",
	"description": "Crowdin Explorer for Visual Studio Code",
	"publisher": "Crowdin",
	"version": "1.6.2",
	"license": "MIT",
	"engines": {
		"vscode": "^1.66.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"Crowdin",
		"Localization",
		"Internationalization",
		"i18n",
		"Translation",
		"Translate",
		"Multi-language"
	],
	"activationEvents": [
		"*"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"configuration": [
			{
				"title": "Crowdin",
				"properties": {
					"crowdin.autoRefresh": {
						"type": "boolean",
						"default": "true",
						"description": "Enables or disables auto refresh after each change in Crowdin configuration file.",
						"scope": "window"
					},
					"crowdin.stringsCompletion": {
						"type": "boolean",
						"default": "true",
						"description": "Enables or disables auto completion of strings keys.",
						"scope": "window"
					},
					"crowdin.stringsCompletionFileExtensions": {
						"type": "string",
						"default": "*",
						"description": "Comma-separated list of file extensions for which autocomplete should be active. By default strings autocomplete will be active in all files.",
						"scope": "window"
					},
					"crowdin.useGitBranch": {
						"type": "boolean",
						"default": "false",
						"description": "Use a Git branch as a Crowdin branch",
						"scope": "window"
					}
				}
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "crowdin",
					"title": "Crowdin",
					"icon": "resources/icon.svg"
				}
			]
		},
		"views": {
			"crowdin": [
				{
					"id": "files",
					"name": "Files"
				},
				{
					"id": "translationProgress",
					"name": "Progress"
				}
			]
		},
		"commands": [
			{
				"command": "crowdin.signIn",
				"title": "Sign in",
				"category": "Crowdin"
			},
			{
				"command": "crowdin.signOut",
				"title": "Sign out",
				"category": "Crowdin"
			},
			{
				"command": "crowdin.selectProject",
				"title": "Select Project",
				"category": "Crowdin"
			},
			{
				"command": "config.create",
				"title": "Create configuration",
				"category": "Crowdin"
			},
			{
				"command": "config.open",
				"title": "Open configuration",
				"category": "Crowdin"
			},
			{
				"command": "files.refresh",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "files.downloadAll",
				"title": "Download all translations",
				"icon": {
					"light": "resources/light/download.svg",
					"dark": "resources/dark/download.svg"
				}
			},
			{
				"command": "files.download",
				"title": "Download project translations",
				"icon": {
					"light": "resources/light/download.svg",
					"dark": "resources/dark/download.svg"
				}
			},
			{
				"command": "files.saveAll",
				"title": "Upload all source files",
				"icon": {
					"light": "resources/light/upload.svg",
					"dark": "resources/dark/upload.svg"
				}
			},
			{
				"command": "files.saveFolder",
				"title": "Upload source folder",
				"icon": {
					"light": "resources/light/upload.svg",
					"dark": "resources/dark/upload.svg"
				}
			},
			{
				"command": "files.saveFile",
				"title": "Upload source file",
				"icon": {
					"light": "resources/light/upload.svg",
					"dark": "resources/dark/upload.svg"
				}
			},
			{
				"command": "files.edit",
				"title": "Edit configuration",
				"icon": {
					"light": "resources/light/settings.svg",
					"dark": "resources/dark/settings.svg"
				}
			},
			{
				"command": "translationProgress.refresh",
				"title": "Refresh progress",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "files.updateSourceFolder",
				"title": "Download source files",
				"icon": {
					"light": "resources/light/download_source.svg",
					"dark": "resources/dark/download_source.svg"
				}
			},
			{
				"command": "files.updateSourceFile",
				"title": "Download source file",
				"icon": {
					"light": "resources/light/download_source.svg",
					"dark": "resources/dark/download_source.svg"
				}
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "files.refresh",
					"when": "view == files",
					"group": "navigation@0"
				},
				{
					"command": "files.saveAll",
					"when": "view == files",
					"group": "navigation@1"
				},
				{
					"command": "files.downloadAll",
					"when": "view == files",
					"group": "navigation@2"
				},
				{
					"command": "files.updateSourceFolder",
					"when": "view == files",
					"group": "navigation@3"
				},
				{
					"command": "translationProgress.refresh",
					"when": "view == translationProgress",
					"group": "navigation@0"
				}
			],
			"view/item/context": [
				{
					"command": "files.edit",
					"when": "view == files && viewItem == root",
					"group": "inline@0"
				},
				{
					"command": "files.saveFolder",
					"when": "view == files && viewItem == folder",
					"group": "inline@1"
				},
				{
					"command": "files.saveFile",
					"when": "view == files && viewItem == file",
					"group": "inline@1"
				},
				{
					"command": "files.download",
					"when": "view == files && viewItem == root",
					"group": "inline@2"
				},
				{
					"command": "files.updateSourceFolder",
					"when": "view == files && viewItem == root",
					"group": "inline@3"
				},
				{
					"command": "files.updateSourceFile",
					"when": "view == files && viewItem == file",
					"group": "inline@4"
				}
			],
			"commandPalette": [
				{
					"command": "crowdin.signIn",
					"when": "!crowdinAuthenticated"
				},
				{
					"command": "crowdin.signOut",
					"when": "crowdinAuthenticated"
				},
				{
					"command": "config.create",
					"when": "!crowdinConfigExists"
				},
				{
					"command": "config.open",
					"when": "crowdinConfigExists"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"test-compile": "tsc -p ./",
		"lint": "eslint './src/**/*.{ts,js}'",
		"prettier": "prettier --write './src/**/*.{ts,js}'",
		"prettier:check": "prettier --check './src/**/*.{ts,js}'"
	},
	"icon": "icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/crowdin/vscode-crowdin.git"
	},
	"devDependencies": {
		"@types/adm-zip": "^0.5.5",
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "^18.19.0",
		"@types/uuid": "^9.0.7",
		"@types/vscode": "1.66.0",
		"@types/yaml": "^1.9.6",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"@vscode/test-electron": "2.3.8",
		"mocha": "^10.2.0",
		"prettier": "2.8.8",
		"ts-loader": "9.5.1",
		"typescript": "^5.3.2",
		"webpack": "5.89.0",
		"webpack-cli": "5.1.4"
	},
	"dependencies": {
		"@crowdin/crowdin-api-client": "1.25.1",
		"adm-zip": "^0.5.10",
		"axios": "^1.6.0",
		"glob": "^7.1.4",
		"original-fs": "^1.2.0",
		"uuid": "^9.0.1",
		"yaml": "^2.3.3"
	}
}
